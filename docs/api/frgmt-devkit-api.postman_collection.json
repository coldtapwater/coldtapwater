{
  "info": {
    "name": "FRGMT DevKit API",
    "description": "Collection for testing the FRGMT DevKit API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"Password123!\"\n}"
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"Password123!\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "API Keys",
      "item": [
        {
          "name": "Generate API Key",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/keys",
              "host": ["{{baseUrl}}"],
              "path": ["api", "keys"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"My Test API Key\"\n}"
            }
          }
        },
        {
          "name": "List API Keys",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/keys",
              "host": ["{{baseUrl}}"],
              "path": ["api", "keys"]
            }
          }
        },
        {
          "name": "Delete API Key",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/keys/{{key_id}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "keys", "{{key_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Codeshot",
      "item": [
        {
          "name": "Generate Screenshot",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-API-Key",
                "value": "{{api_key}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/tools/codeshot",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tools", "codeshot"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"console.log('Hello, World!');\",\n  \"theme\": \"dark\",\n  \"background\": {\n    \"style\": \"solid\",\n    \"color\": \"#1a1a1a\"\n  },\n  \"window\": \"editor\",\n  \"font\": {\n    \"family\": \"JetBrains Mono\",\n    \"size\": 14\n  },\n  \"lineNumbers\": true,\n  \"highlight\": [1],\n  \"output\": {\n    \"format\": \"png\",\n    \"quality\": 100,\n    \"width\": 800,\n    \"height\": 600\n  }\n}"
            }
          }
        }
      ]
    },
    {
      "name": "User",
      "item": [
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "me"]
            }
          }
        },
        {
          "name": "Update User Profile",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "me"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"updatedusername\"\n}"
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001"
    }
  ]
}
